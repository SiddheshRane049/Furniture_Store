<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_roundcor"
    tools:context=".home_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="62dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/contrail_one"
                android:text="EXPLORE WHAT YOUR HOME NEEDS"
                android:textColor="#000000"
                android:textSize="38sp" />

            <SearchView
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/rounded_corners" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/contrail_one"
                android:text="CATEGORIES"
                android:textColor="#000000"
                android:textSize="30sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="18dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c1"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="30dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/retback" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            app:srcCompat="@drawable/chairr" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="100dp"
                            android:fontFamily="@font/contrail_one"
                            android:gravity="center"
                            android:text="CHAIR"
                            android:textColor="#040404"
                            android:textSize="18sp"
                            tools:textSize="28sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c2"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="30dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/o" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/lk" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="100dp"
                            android:fontFamily="@font/contrail_one"
                            android:gravity="center"
                            android:text="SOFA"
                            android:textColor="#000000"
                            android:textSize="29sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c3"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="30dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/baccck" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/oom" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="100dp"
                            android:fontFamily="@font/contrail_one"
                            android:gravity="center"
                            android:text="BED"
                            android:textColor="#101010"
                            android:textSize="29sp"
                            tools:textColor="#000000" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c4"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="30dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/h" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            app:srcCompat="@drawable/lam"
                            tools:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="100dp"
                            android:fontFamily="@font/contrail_one"
                            android:gravity="center"
                            android:text="DECOR"
                            android:textColor="#000000"
                            android:textSize="29sp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="#FAF6F6"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/item1_image"
                    android:layout_width="177dp"
                    android:layout_height="199dp"
                    android:backgroundTint="#A61313"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/chairo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/item1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="NatureNest Chair"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:textColor="#000000"
                        tools:textSize="25sp" />

                    <TextView
                        android:id="@+id/item1_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="₹ 8999"
                        android:textColor="#9C27B0"
                        android:textSize="16sp"
                        tools:textSize="25sp" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#8BC34A"
                        android:fontFamily="@font/contrail_one"
                        android:text="View Product"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF6F6"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/item2_image"
                    android:layout_width="177dp"
                    android:layout_height="199dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/sofao" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/item2_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="CozyRetreat Sofa "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:fontFamily="@font/contrail_one"
                        tools:textSize="25sp" />

                    <TextView
                        android:id="@+id/item2_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="₹ 17999"
                        android:textColor="#9C27B0"
                        android:textSize="16sp"
                        tools:textSize="25sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#8BC34A"
                        android:fontFamily="@font/contrail_one"
                        android:text="View Product"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:background="#FAF6F6"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/item3_image"
                    android:layout_width="177dp"
                    android:layout_height="199dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/lamptt" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/item3_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="LuminaLuxe Lamp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:textSize="25sp" />

                    <TextView
                        android:id="@+id/item3_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/contrail_one"
                        android:text="₹ 1999"
                        android:textColor="#9C27B0"
                        android:textSize="16sp"
                        tools:textSize="25sp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#8BC34A"
                        android:fontFamily="@font/contrail_one"
                        android:text="View Product"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>